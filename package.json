{
  "name": "@theqrl/node-helpers",
  "version": "1.0.0",
  "description": "QRL node helpers",
  "main": "dist/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "nodemon --exec babel-node ./src/index.js",
    "dev": "npm-run-all --parallel dev:lint dev:test",
    "dev:lint": "nodemon -x eslint .",
    "dev:test": "nodemon -x npm run test",
    "build": "babel src --out-dir ./dist --source-maps && browserify -p esmify build.js -o dist/web-bundle.js",
    "serve": "node ./dist/index.js",
    "lint": "eslint .",
    "test": "./node_modules/.bin/mocha --require @babel/register",
    "debug": "node --inspect-brk ./dist/index.js",
    "cover": "node_modules/istanbul/lib/cli.js cover node_modules/mocha/bin/_mocha -- -R spec test/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theqrl/node-helpers.git"
  },
  "author": "QRL contributors <info@theqrl.org> (https://theqrl.org)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/theqrl/node-helpers/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/theqrl/node-helpers#readme",
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "browserify": "^16.5.1",
    "chai": "^4.2.0",
    "coveralls": "^3.0.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-import": "^0.13.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-modules": "^1.1.1",
    "esmify": "^2.1.1",
    "istanbul": "^0.4.5",
    "mocha": "^8.0.1",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.5"
  }
}
